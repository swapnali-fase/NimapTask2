<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <!-- Header Section -->
    <div id="header">
        <img src="~/Image/NimapLogo.jpeg" alt="Nimap Infotech Logo" class="logo" />
        <div class="header-text">
            <b> <h1 class="title">Nimap Infotech</h1><br /></b>
            <p class="description">Empowering businesses through innovative digital solutions for a seamless transformation journey.</p>

        </div>
        @Html.ActionLink("Go To Home", "Home", "Product", null, new { @class = "btn btn-warning" })
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Footer Section -->
    <div id="footer">
        <p>&copy;2024 Nimap Infotech.<br /><br />All rights reserverd</p>
        
        <p>Designed by Swapnali Fase</p>
    </div>
</body>
</html>