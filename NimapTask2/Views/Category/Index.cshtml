@model IEnumerable<NimapTask2.Models.Category>
@{
    ViewBag.Title = "Index";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="table-container">
    <h2>Categories</h2>
    <table class="table table-striped table-warning" border="3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CId</td>
                <td>@category.CName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = category.CId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = category.CId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Add Category", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Add Product", "Index", "Product", null, new { @class = "btn btn-primary" })

 </div>

<style>

    /* Table Styling */
    .table-container {
        margin: 20px auto;
        max-width: 90%;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;

    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #9b4dca;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1e6f2;
    }

    /* Action buttons inside table */
    .btn {
        padding: 6px 12px;
        margin: 2px;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    /* Pagination Styling */
    .pagination {
        margin-top: 20px;
        text-align: center;
    }

        .pagination a {
            color: #9b4dca;
            padding: 8px 16px;
            text-decoration: none;
            margin: 0 4px;
            border-radius: 4px;
        }

            .pagination a:hover {
                background-color: #9b4dca;
                color: white;
            }

        .pagination span {
            padding: 8px 16px;
            margin: 0 4px;
            border-radius: 4px;
            background-color: #9b4dca;
            color: white;
        }

    /* Page Title */
    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    /* Additional button styling outside of the table */
    .btn-create {
        margin-top: 20px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        padding: 12px 20px;
        background-color: #9b4dca;
        color: white;
        font-size: 1rem;
        border-radius: 4px;
        text-align: center;
        text-decoration: none;

    }

        .btn-create:hover {
            background-color: #7a3e9e;
        }
</style>