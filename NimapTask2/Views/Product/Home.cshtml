
@{
    ViewBag.Title = "Home";
}



<div class="center-content">
    <h2>Welcome to My Website</h2>
    <p>Choose an option below:</p>
    <div class="links">
        @Html.ActionLink("Product List", "Index", "Product", null, new { @class = "btn-link" })
        @Html.ActionLink("Add product", "Create", "Product", null, new { @class = "btn-link" })
        @Html.ActionLink("View Category", "Index", "Category", null, new { @class = "btn-link" })
        @Html.ActionLink("Add Category", "Create", "Category", null, new { @class = "btn-link" })
        
    </div>
</div>

<style>
    /* Center the content */
    .center-content {
        display: flex;
        flex-direction: column;
        justify-content: center;

        align-items: center;
       // height: 100vh; /* Full page height */
        text-align: center;
    }

    .content {
       
        padding: 130px;
        text-align: center;
        background: linear-gradient(to right, #9b4dca, #f06292, #f44336);
    }


        .center-content h2 {
            margin-bottom: 20px;
            font-size: 2rem;
            color: #34495e;
        }

    .links {
        margin-top: 10px;
    }

    .btn-link {
        display: inline-block;
        margin: 10px;
        padding: 10px 20px;
        background-color: #34495e;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

        .btn-link:hover {
            background-color: #2c3e50;
        }
</style>